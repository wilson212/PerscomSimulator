<?xml version="1.0" encoding="utf-8" ?>
<!--
  Attributes:
    name: required
      Specifies the title of the rank
      
    abbreviation: required
      Specifies the rank abbreviation
      
    grade: required
      Specifies the rank "level" or grade
    
    promotableAt: 
      Specifies the time in grade to be promotable to the next
      rank. This value only affects the Selection Rates graph and
      does not prevent the simulator from processing the promotion.
      Defaults to 12 if excluded (not required)
      
    minTimeForRet: 
      Soldiers with at least this amount of time left (in months)
      before retirement will get priority for promotion to THAT rank.
      
    maxTimeInGrade:
      Soldiers that sit at this rank for the specified amount of months
      will be forcefully retired. Retirement date is otherwise un-modified.
      
    stature: 
      Adjusts the soldier retirement date to meet the minimum amount if less
      than the stature number. Two numbers may be listed, seperated by a comma
      to indicate a minimum and maximum adjustment (a range), which is chosen
      at random. This does NOT adjust the retirement date of the soldier if their 
      remaining time is greater than the stature minimum.
-->
<Ranks>
  <enlisted>
    <!-- Skip automatic promotions (e1-e4) -->
    <rank name="Junior Enlisted" abbreviation="E1-4" grade="4" promotableAt="24"/>
    <rank name="Sergeant" abbreviation="SGT" grade="5" />
    <rank name="Staff Sergeant" abbreviation="SSG" grade="6" minTimeForRet="3"/>
    <rank name="Sergeant First Class" abbreviation="SFC" grade="7" minTimeForRet="3"/>
    <rank name="Master Sergeant" abbreviation="MSG" grade="8" minTimeForRet="3" stature="6,12"/>
    <rank name="Sergeant Major" abbreviation="SGM" grade="9" minTimeForRet="3" stature="12"/>
  </enlisted>
  <officer>
    <rank name="1st Lieutenant" abbreviation="2/1LT" grade="2" promotableAt="24"/>
    <rank name="Captain" abbreviation="CPT" grade="3" promotableAt="18" stature="6"/>
    <rank name="Major" abbreviation="MAJ" grade="4" minTimeForRet="6" promotableAt="18"/>
    <rank name="Lieutenant Colonel" abbreviation="LTC" grade="5" minTimeForRet="3" promotableAt="18" stature="12,24"/>
    <rank name="Colonel" abbreviation="COL" grade="6" stature="12,30" maxTimeInGrade="30" promotableAt="18"/>
    <rank name="Brigadier General" abbreviation="BG" grade="7" minTimeForRet="3" promotableAt="12" stature="12"/>
    <rank name="Major General" abbreviation="MG" grade="8" minTimeForRet="3" promotableAt="12" stature="12"/>
    <rank name="Lieutenant General" abbreviation="LTG" grade="9" minTimeForRet="3" promotableAt="12" stature="12"/>
    <rank name="General" abbreviation="GEN" grade="10" minTimeForRet="3" stature="18,24" maxTimeInGrade="24"/>
  </officer>
  <warrant>
    <rank name="Chief Warrant 2" abbreviation="CW2" grade="2" minTimeForRet="3"/>
    <rank name="Chief Warrant 3" abbreviation="CW3" grade="3" minTimeForRet="3"/>
    <rank name="Chief Warrant 4" abbreviation="CW4" grade="4" minTimeForRet="3"/>
    <rank name="Chief Warrant 5" abbreviation="CW5" grade="5" stature="12"/>
  </warrant>
</Ranks>
